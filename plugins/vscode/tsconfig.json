{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "out",
    "rootDir": "src",
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "types": ["node", "vscode"],

    "typeRoots": [
      "node_modules/@types",
      "node_modules/vscode/types"
    ]
  },
  "include": ["src"]
}
